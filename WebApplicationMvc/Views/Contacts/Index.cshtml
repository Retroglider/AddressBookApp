@model WebApplicationMvc.Models.ContactListViewModel

@{
    ViewData["Title"] = "Contact List";
}

<h1>Address Book: @Model.AddressBookName</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Contacts)
        {
            <tr><td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td><a href="Contacts/Detail?id=@item.Id">Edit</a></td>
                <td>Delete</td></tr>
        }
        <tr>
            <td colspan="4">
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    </tbody>
</table>
